{% extends 'base.html.twig' %}

{% block body %}
{% if projections != null %}
<h2>Dnes hr√°me</h2>
<table class="table table-striped">
  {% for projection in projections %}
  <tr>
    <td>{{ projection.s_start }}</td>
    <td>Kino {{ projection.getHall.getCinema.getName }}</td>
    <td>{{ projection.getMovie.getName }}</td>
  </tr>
  {% endfor %}
</table>
{% endif %}

<div class="carousel slide" data-ride="carousel" id="carouser-movies">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li class="active" data-slide-to="0" data-target="#carouser-movies"></li>
    <li data-slide-to="1" data-target="#carouser-movies"></li>
    <li data-slide-to="2" data-target="#carouser-movies"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img alt="" src="http://lorempixel.com/1200/500/food/1"/>
    </div>
    <div class="item">
      <img alt="" src="http://lorempixel.com/1200/500/food/2"/>
    </div>
    <div class="item">
      <img alt="" src="http://lorempixel.com/1200/500/food/4"/>
    </div>
  </div>
</div>
{% endblock %}
